//- Редактирование элемента каталога
extends layout

block content
  header
    .container.my-2
      ol.breadcrumb
        li.breadcrumb-item
          a(href="/") Главная
        li.breadcrumb-item
          a(href="/admin/catalog") Редактирование католга
        li.breadcrumb-item.active #{title}

  .container
    h2 Редактирование элемента каталога
    p.lead Заполните карточку запчасти.

    .row
      .col-md-4.order-md-2.mb-4
       h4.d-flex.justify-content-between.align-items-center.mb-3
         span.text-muted Фото
         button.btn.btn-primary(type="button") Добавить
       ul.list-group.mb-3
         li.list-group-item.d-flex.justify-content-between.lh-condensed
           div  
             h6.my-0 Product name
             small.text-muted Brief description
           span.text-muted $12
      
      .col-md-8.order-md-1
        form.needs-validation(method="POST", action=(editUser ? "/admin/catalog/update" : "/admin/catalog"), enctype="application/x-www-form-urlencoded", novalidate)
          input(type="hidden", value=(editProduct ? editProduct._id : ''), name="id")
          .form-group.mb-3
            label(for="carBrand") Марка автомобиля
            select#carBrand.form-control(type="text" aria-describedby="carBrandHelp" placeholder="Марка автомобиля" name="carBrand" value=(product ? product.name : ''))
              each carBrand, index in carBrands
                option carBrand.name
            //-
             small#carBrandHelp.form-text.text-muted Имя пользователя по которому осуществляется вход на сайт.
          .form-group.mb-3
            label(for="phone") Телефон 
              span.text-muted (не обязательно)
            input#phone.form-control(type="tel", placeholder="+375(29)641-07-89", name="phone", value=(product ? product.phone : ''))
            .invalid-feedback Введите коректный телефон.
          .form-group.mb-3
            label(for="email") Email 
              span.text-muted (не обязательно)
            input#email.form-control(type="email", placeholder="you@example.com", name="email", value=(product ? product.email : ''))
            .invalid-feedback Введите коректный адрес.
          .form-group.mb-3
            label(for="password") Пароль
            input#password.form-control(type="password", placeholder="" required, name="password")
            .invalid-feedback Please enter your shipping address.
          h4.mb-3 Роль
          .form-group.d-block.my-3
            //-
             .custom-control.custom-radio
              input#read.custom-control-input(name="role", type="radio", checked, required)
              label.custom-control-label(for="guest") Чтение
            .custom-control.custom-radio
              input#manager.custom-control-input(name="role", type="radio", required, checked=(product && product.role === 'manager'? 'checked' : undefined), value="manager")
              label.custom-control-label(for="manager") Менеджер
            .custom-control.custom-radio
              input#admin.custom-control-input(name="role", type="radio", required, checked=(product && product.role === 'admin'? 'checked' : undefined), value="admin")
              label.custom-control-label(for="admin") Администратор
          
          hr.mb-4
          button.btn.btn-primary.btn-lg.btn-block.mb-4(type="submit") Сохранить элемент каталога
