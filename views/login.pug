//- Редактирование пользователя
extends layout

block content

  .container
    .row
      .col-sm-3
      .col-sm-6
        h2.my-4 Вход на сайт
        form.needs-validation(method="POST", novalidate)
          .row.form-group.mb-3
            label.col-md-3.col-form-label(for="username") Логин
            .col-md-9
              input#username.form-control(type="text" aria-describedby="usernameHelp" placeholder="Введите логин" required)
              small#usernameHelp.form-text.text-muted Имя пользователя которое было зарегистрировано ранее.
          .row.form-group.mb-3
            label.col-md-3.col-form-label(for="password") Пароль
            .col-md-9
              input#password.form-control(type="password", placeholder="", required)
          hr.mb-4
          button.btn.btn-primary.btn-lg.btn-block.mb-4(type="submit") Вход
      .col-sm-3
