//- Просмотр элемента каталога
extends layout

block head
  link(rel='stylesheet', href='/fotorama/fotorama-4.6.4.min.css')
  
block content
  header
    .container.my-2
      ol.breadcrumb
        li.breadcrumb-item
          a(href="/") Главная
        li.breadcrumb-item
          a(href="/catalog") Каталог
        li.breadcrumb-item.active #{title}

  section.container.mb-2
    .row
      .col-md-6  
        .fotorama(data-width="700" data-ratio="3/2" data-nav="thumbs" data-thumbheight="48")
          img(src="images/car-brands/Acura-logo.png")
          img(src="images/car-brands/Alpina-logo.png")
          img(src="images/car-brands/Audi-logo.png")
          img(src="images/car-brands/Austin-logo.png")
          img(src="images/car-brands/AMG-logo.png")
      .col-md-6
  include includes/footer.pug

block scripts
  script(src="/fotorama/fotorama-4.6.4.min.js")

