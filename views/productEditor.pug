//- Редактирование элемента каталога
extends layout

block content
  header
    .container.my-2
      ol.breadcrumb
        li.breadcrumb-item
          a(href="/") Главная
        li.breadcrumb-item
          a(href="/admin/catalog") Редактирование католга
        li.breadcrumb-item.active #{title}

  .container
    h2 Редактирование элемента каталога
    p.lead Заполните карточку запчасти.

    .row
      .col-md-4.order-md-2.mb-4
       h4.d-flex.justify-content-between.align-items-center.mb-3
         span.text-muted Фото
         button.btn.btn-primary(type="button") Добавить
       ul.list-group.mb-3
         li.list-group-item.d-flex.justify-content-between.lh-condensed
           div  
             h6.my-0 Product name
             small.text-muted Brief description
           span.text-muted $12
      
      .col-md-8.order-md-1
        form.needs-validation(method="POST", action=(editUser ? "/admin/catalog/update" : "/admin/catalog"), enctype="application/x-www-form-urlencoded", novalidate)
          input(type="hidden", value=(editProduct ? editProduct._id : ''), name="id")
          .form-group.mb-3
            label(for="carModel") Модель автомобиля
            select#carModel.form-control(aria-describedby="carModelHelp" placeholder="Модель автомобиля" name="carModel" value=(product && product.model ? product.model.name : ''))
              each carModel, index in carModels
                option= carModel.fullName
            //-
             small#carBrandHelp.form-text.text-muted Имя пользователя по которому осуществляется вход на сайт.
          .form-group.mb-3
            label(for="issueYear") Год выпуска 
            select#issueYear.form-control(aria-describedby="issueYearHelp" placeholder="Год выпуска" name="issueYear" value='')
            .invalid-feedback Введите коректный год выпуска.
          .form-group.mb-3
            label(for="engine") Модель двигателя 
              span.text-muted (не обязательно)
            input#engine.form-control(type="text", name="engine", value='')
          .form-group.mb-3
            label(for="responsible") Ответственный 
              span.text-muted (не обязательно)
            input#responsible.form-control(type="text", placeholder="Игорь, +375(29)693-09-36‬" name="responsible", value='')
          .form-group.mb-3
            label(for="description") Описание
            textarea#description.form-control(name="description", rows='6')
          hr.mb-4
          button.btn.btn-primary.btn-lg.btn-block.mb-4(type="submit") Сохранить элемент каталога
