extends layout

block content

  //- Header with Background Image
  header(class="business-header")
    div(class="container")
      div(class="row")
        div(class="col-lg-12")
          h1(class="display-3 text-center text-white mt-4") Business Name or Tagline
  
  div(class="container my-4")
    ol(class="breadcrumb")
      li(class="breadcrumb-item")
        a(href="#") Home
      li(class="breadcrumb-item")
        a(href="#") Library
      li(class="breadcrumb-item active") Data

  //- Jumbotron Header
  div(class="container")
    section(class="jumbotron my-4")
      h1(class="display-3") A Warm Welcome!
      p(class="lead") Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.
      a(href="#", class="btn btn-primary btn-lg") Call to action!

    h1= title
    p Welcome to #{title}
    p Добро пожаловать в #{title}
